<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_primary_dark"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingTop="18dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="18dp">

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/merriweather_sans"
            android:maxLines="2"
            android:text="Cool story"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#EAEAEA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/preview_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="70dp"
            android:ellipsize="end"
            android:fontFamily="@font/merriweather_sans"
            android:maxLines="2"
            android:text="Spicy jalapeno bacon ipsum dolor amet shoulder swine leberkas corned beef bresaola tenderloin. Beef ribs brisket prosciutto ball tip andouille. Andouille boudin tenderloin capicola pig ground round tongue cupim porchetta burgdoggen. Pork jowl jerky, beef ribs ground round pork chop pastrami brisket. Pig beef ribs pork belly frankfurter picanha rump tail salami alcatra chicken porchetta meatloaf. Bacon pork belly pork loin ribeye picanha, ham strip steak pancetta brisket. Tri-tip strip steak boudin burgdoggen pork belly corned beef."
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#80EAEAEA"
            app:layout_constraintBottom_toBottomOf="@id/author_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/title_text_view" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/icon_holder"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/bookmark_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_bookmark_empty"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/comment_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_comment"
                app:layout_constraintEnd_toStartOf="@id/bookmark_button"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/author_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweather_sans"
            android:text="K. Caldwell"
            android:textColor="#60EAEAEA"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/time_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweather_sans"
            android:text="Today 7:40pm"
            android:textColor="#DAF96837"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/article_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#20CECECE" />

</LinearLayout>
