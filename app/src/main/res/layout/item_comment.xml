<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/comment_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/color_primary_dark_alternate"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/author_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#868686"
            android:fontFamily="@font/merriweather_sans"
            android:textSize="14sp"
            android:text="K Caldwell"
            android:textAppearance="?attr/textAppearanceListItem"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/separator_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="â€¢"
            android:textColor="#80EAEAEA"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/author_text_view"/>

        <TextView
            android:id="@+id/karma_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="#868686"
            android:fontFamily="@font/merriweather_sans"
            android:textSize="14sp"
            android:text="+148"
            android:textAppearance="?attr/textAppearanceListItem"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/separator_view" />

        <TextView
            android:id="@+id/content_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/color_accent_secondary"
            android:fontFamily="@font/merriweather_sans"
            android:text="Bacon ipsum dolor amet enim strip steak dolore ball tip pork dolor cillum aliqua fatback pastrami ullamco porchetta fugiat sunt. Dolor kielbasa nisi in enim venison chuck. Id sirloin laboris incididunt. Tongue jowl sed pastrami. Eu cillum labore laborum, voluptate pork jowl qui alcatra sirloin brisket salami pork belly. Ullamco pork belly reprehenderit burgdoggen fatback short ribs capicola in incididunt t-bone enim.

Kielbasa enim officia ut veniam swine. Aliquip tempor ribeye, short ribs pariatur deserunt shankle hamburger prosciutto rump jowl ground round adipisicing ullamco corned beef. Cupidatat nostrud fatback ipsum. Nisi porchetta non nulla deserunt incididunt sunt tri-tip duis bacon eu doner swine ad shankle. Enim mollit tail, filet mignon jowl short ribs nisi tri-tip exercitation shankle chicken sirloin."
            android:textAppearance="?attr/textAppearanceListItem"
            app:layout_constraintTop_toBottomOf="@id/author_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/time_text_view"/>

        <ImageView
            android:id="@+id/time_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_clock"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textColor="#80EAEAEA"
            android:fontFamily="@font/merriweather_sans"
            android:textSize="12sp"
            android:text="3 hours ago"
            android:textAppearance="?attr/textAppearanceListItem"
            app:layout_constraintStart_toEndOf="@id/time_icon"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/reply_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="#80EAEAEA"
            android:fontFamily="@font/merriweather_sans"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:text="3 Replies"
            android:textAppearance="?attr/textAppearanceListItem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/comment_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#868686" />

</LinearLayout>
